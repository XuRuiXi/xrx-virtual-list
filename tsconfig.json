{
  "compilerOptions": {
    // 用于选择模块解析策略，有'node'和'classic'两种类型
    "moduleResolution": "node",
    "target": "ES2015", //编译后的目标javascript版本， ES5, ES6/ES2015, ES2016, ES2017, ES2018, ES2019, ES2020, ESNext
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "jsx": "react", // jsx编译成功react模式，生成React.createElement
    "esModuleInterop": true, //允许我们使用commonjs的方式import默认文件， import React from 'react'
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
}
